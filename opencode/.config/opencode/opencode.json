{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "autoshare": false,
    "autoupdate": true,
    "instructions": [
        "common_rules/*.md"
    ],
    "permission": {
        "edit": "ask",
        "bash": {
            "pwd": "allow",
            "ls": "allow",
            "echo": "allow",
            "cat": "allow",
            "date": "allow",
            "head": "allow",
            "tail": "allow",
            "diff": "allow",
            "printf": "allow",
            "git diff": "allow",
            "git status": "allow",
            "git log": "allow",
            "go build": "allow",
            "go test": "allow",
            "make build": "allow",
            "make test": "allow",
            "./gradlew build": "allow",
            "./gradlew test": "allow",
            "./gradlew tasks": "allow",
            "*": "ask"
        }
    },
    "plugin": [
        "opencode-openai-codex-auth"
    ],
    "provider": {
        "openai": {
            "options": {
                "reasoningEffort": "medium",
                "reasoningSummary": "auto",
                "textVerbosity": "medium",
                "include": [
                    "reasoning.encrypted_content"
                ],
                "store": false
            },
            "models": {
                "gpt-5-codex-low": {
                    "name": "GPT 5 Codex Low (OAuth)",
                    "options": {
                        "reasoningEffort": "low",
                        "reasoningSummary": "auto",
                        "textVerbosity": "medium",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-codex-medium": {
                    "name": "GPT 5 Codex Medium (OAuth)",
                    "options": {
                        "reasoningEffort": "medium",
                        "reasoningSummary": "auto",
                        "textVerbosity": "medium",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-codex-high": {
                    "name": "GPT 5 Codex High (OAuth)",
                    "options": {
                        "reasoningEffort": "high",
                        "reasoningSummary": "detailed",
                        "textVerbosity": "medium",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-minimal": {
                    "name": "GPT 5 Minimal (OAuth)",
                    "options": {
                        "reasoningEffort": "minimal",
                        "reasoningSummary": "auto",
                        "textVerbosity": "low",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-low": {
                    "name": "GPT 5 Low (OAuth)",
                    "options": {
                        "reasoningEffort": "low",
                        "reasoningSummary": "auto",
                        "textVerbosity": "low",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-medium": {
                    "name": "GPT 5 Medium (OAuth)",
                    "options": {
                        "reasoningEffort": "medium",
                        "reasoningSummary": "auto",
                        "textVerbosity": "medium",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-high": {
                    "name": "GPT 5 High (OAuth)",
                    "options": {
                        "reasoningEffort": "high",
                        "reasoningSummary": "detailed",
                        "textVerbosity": "high",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-mini": {
                    "name": "GPT 5 Mini (OAuth)",
                    "options": {
                        "reasoningEffort": "low",
                        "reasoningSummary": "auto",
                        "textVerbosity": "low",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                },
                "gpt-5-nano": {
                    "name": "GPT 5 Nano (OAuth)",
                    "options": {
                        "reasoningEffort": "minimal",
                        "reasoningSummary": "auto",
                        "textVerbosity": "low",
                        "include": [
                            "reasoning.encrypted_content"
                        ],
                        "store": false
                    }
                }
            }
        }
    },
    "mcp": {
        "linear": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.linear.app/mcp"
            ],
            "enabled": true
        },
        "notionMCP": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.notion.com/mcp"
            ]
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        },
        "grep": {
            "type": "remote",
            "url": "https://mcp.grep.app",
            "enabled": true
        },
        "deepwiki": {
            "type": "remote",
            "url": "https://mcp.deepwiki.com/sse",
            "enabled": true
        },
        "markitdown": {
            "type": "local",
            "command": [
                "uvx",
                "markitdown-mcp"
            ],
            "enabled": true
        },
        "ast-grep": {
            "type": "local",
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/ast-grep/ast-grep-mcp",
                "ast-grep-server"
            ],
            "enabled": true
        }
    }
}
