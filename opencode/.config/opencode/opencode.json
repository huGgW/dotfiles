{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "autoshare": false,
    "autoupdate": true,
    "permission": {
        "edit": "ask",
        "bash": {
            "pwd": "allow",
            "ls": "allow",
            "echo": "allow",
            "cat": "allow",
            "date": "allow",
            "head": "allow",
            "tail": "allow",
            "diff": "allow",
            "printf": "allow",
            "git diff": "allow",
            "git status": "allow",
            "git log": "allow",
            "go build": "allow",
            "go test": "allow",
            "make build": "allow",
            "make test": "allow",
            "./gradlew build": "allow",
            "./gradlew test": "allow",
            "./gradlew tasks": "allow",
            "*": "ask"
        }
    },
    "mcp": {
        "sequential-thinking": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "enabled": true
        },
        "fetcher": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "fetcher-mcp"
            ],
            "enabled": true
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        },
        "serena": {
            "type": "local",
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant",
                "--enable-web-dashboard",
                "False"
            ],
            "enabled": true
        },
        "grep": {
            "type": "remote",
            "url": "https://mcp.grep.app"
        },
        "notionMCP": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.notion.com/mcp"
            ]
        }
    }
}
