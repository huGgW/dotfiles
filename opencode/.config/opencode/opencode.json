{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "autoshare": false,
    "autoupdate": true,
    "instructions": ["common_rules/*.md"],
    "permission": {
        "webfetch": "allow",
        "skill": "allow",
        "doom_loop": "deny",
        "bash": {
            "pwd *": "allow",
            "ls *": "allow",
            "echo *": "allow",
            "cat *": "allow",
            "date *": "allow",
            "head *": "allow",
            "tail *": "allow",
            "diff *": "allow",
            "printf *": "allow",
            "fd *": "allow",
            "find *": "allow",
            "rg *": "allow",
            "grep *": "allow",
            "git diff *": "allow",
            "git status *": "allow",
            "git log *": "allow",
            "gh pr list *": "allow",
            "gh pr view *": "allow",
            "./gradlew tasks": "allow",
            "*": "ask"
        }
    },
    "agent": {
        "build": {
            "permission": {
                "edit": "allow",
                "doom_loop": "ask",
                "bash": {
                    "go build *": "allow",
                    "go test *": "allow",
                    "make build *": "allow",
                    "make test *": "allow",
                    "./gradlew build *": "allow",
                    "./gradlew test *": "allow",
                    "git commit *": "allow",
                }
            }
        }
    },
    "plugin": [
        "opencode-openai-codex-auth@4.2.0",
        "@tarquinen/opencode-dcp@latest",
        "@franlol/opencode-md-table-formatter@0.0.3"
    ],
    "provider": {
        "openai": {
            "options": {
                "reasoningEffort": "medium",
                "reasoningSummary": "auto",
                "textVerbosity": "medium",
                "include": ["reasoning.encrypted_content"],
                "store": false
            },
        }
    },
    "mcp": {
        "linear": {
            "type": "remote",
            "url": "https://mcp.linear.app/mcp",
            "oauth": {
                "scope": "tools:read"
            },
            "enabled": false
        },
        "sentry": {
            "type": "remote",
            "url": "https://mcp.sentry.dev/mcp",
            "oauth": {
                "scope": "tools:read"
            },
            "enabled": false
        },
        "notionMCP": {
            "type": "remote",
            "url": "https://mcp.notion.com/mcp",
            "oauth": {
                "scope": "tools:read"
            },
            "enabled": false
        },
        "context7": {
            "type": "local",
            "command": ["npx", "-y", "@upstash/context7-mcp"],
            "enabled": false
        },
        "grep": {
            "type": "remote",
            "url": "https://mcp.grep.app",
            "enabled": true
        },
        "deepwiki": {
            "type": "remote",
            "url": "https://mcp.deepwiki.com/sse",
            "enabled": true
        },
        "markitdown": {
            "type": "local",
            "command": ["uvx", "markitdown-mcp"],
            "enabled": true
        },
        "ast-grep": {
            "type": "local",
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/ast-grep/ast-grep-mcp",
                "ast-grep-server"
            ],
            "enabled": true
        }
    }
}
