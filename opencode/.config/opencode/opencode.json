{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"autoshare": false,
	"autoupdate": true,
	"mcp": {
		"fetcher": {
			"type": "local",
			"command": ["npx", "-y", "fetcher-mcp"],
			"enabled": true
		},
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"sequential-thinking": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true
		},
		"mcp-gopls": {
			"type": "local",
			"command": ["mcp-gopls"],
			"enabled": true
		}
	}
}
