{
    "$schema": "https://opencode.ai/config.json",
    "theme": "system",
    "autoshare": false,
    "autoupdate": true,
    "mcp": {
        "fetcher": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "fetcher-mcp"
            ],
            "enabled": true
        },
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp"
            ],
            "enabled": true
        },
        "grep": {
            "type": "remote",
            "url": "https://mcp.grep.app"
        },
        "sequential-thinking": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "enabled": true
        },
        "notionMCP": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "mcp-remote",
                "https://mcp.notion.com/mcp"
            ]
        }
    }
}
