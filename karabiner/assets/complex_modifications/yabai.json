{
    "title": "yabai matching to rectangle keys",
    "rules": [
        {
            "description": "move focused windows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --swap west"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --swap east"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "up_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --swap north"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "down_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --swap south"
                        }
                    ]
                }
            ]
        },
        {
            "description": "resize focused windows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --resize left:-50:0 && /opt/homebrew/bin/yabai -m window --resize right:-50:0",
                            "repeat": true
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --resize left:50:0 && /opt/homebrew/bin/yabai -m window --resize right:50:0",
                            "repeat": true
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "up_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --resize top:0:-50 && /opt/homebrew/bin/yabai -m window --resize bottom:0:-50",
                            "repeat": true
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "down_arrow",
                        "modifiers": {
                            "mandatory": [
                                "left_control",
                                "left_option",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "/opt/homebrew/bin/yabai -m window --resize top:0:50 && /opt/homebrew/bin/yabai -m window --resize bottom:0:50",
                            "repeat": true
                        }
                    ]
                }
            ]
        }
    ]
}